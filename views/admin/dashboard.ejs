<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard | THAI TOUR</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/uploads/Logo-company.png">

</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand fw-bold" href="#">THAI TOUR (ADMIN)</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarAdmin">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarAdmin">
        <a href="/admin/logout" class="btn btn-outline-light mt-2 mt-lg-0">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Dashboard -->
  <div class="container my-5">
    <h2 class="mb-4 text-center text-md-start">Welcome, <%= admin.email %></h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
      <div class="col">
        <div class="card border-0 shadow text-center p-4 h-100">
          <h5>Manage Tourist Spots</h5>
          <a href="/admin/spots" class="btn btn-primary mt-3">Go</a>
        </div>
      </div>

      <div class="col">
        <div class="card border-0 shadow text-center p-4 h-100">
          <h5>Manage Guides</h5>
          <a href="/admin/guides" class="btn btn-primary mt-3">Go</a>
        </div>
      </div>

      <div class="col">
        <div class="card border-0 shadow text-center p-4 h-100">
          <h5>View User Bookings</h5>
          <a href="/admin/users" class="btn btn-primary mt-3">Go</a>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
