<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Guides | THAI TOUR</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/uploads/Logo-company.png">

  <style>
    .guide-card {
      background-color: white;
      border: 1px solid #ccc;
      border-radius: 20px;
      padding: 20px;
      height: 100%;
    }

    .guide-img {
      width: 100px;
      height: 100px;
      background-color: #e2e8f0;
      border-radius: 50%;
      margin-right: 20px;
      object-fit: cover;
    }

    .rating-btn {
      background-color: #f56565;
      color: white;
      border: none;
      border-radius: 20px;
      padding: 6px 18px;
      font-size: 0.9rem;
    }

    .rating-btn:hover {
      background-color: #e53e3e;
    }
  </style>
</head>

<body class="bg-light">

  <!-- Navbar -->
  <%- include('../partials/navbar-user', { active: 'guides' }) %>

  <div class="container mt-5">
    <h3 class="fw-bold mb-4">GUIDES</h3>

    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% guides.forEach((guide) => { %>
        <div class="col">
          <div class="guide-card d-flex flex-column flex-md-row align-items-start">
            <img src="/uploads/<%= guide.image_path %>" alt="profile" class="guide-img me-md-3 mb-3 mb-md-0">

            <div class="flex-grow-1">
              <p><strong>NAME:</strong> <%= guide.full_name %></p>
              <p><strong>PHONE:</strong> <%= guide.phone %></p>
              <p><strong>Languages:</strong> <%= guide.language_spoken %></p>

              <% if (guide.avg_rating !== null) { %>
                <div class="mb-2">‚≠ê <%= guide.avg_rating %> / 5</div>
              <% } else { %>
                <div class="mb-2 text-muted">No rating</div>
              <% } %>

              <form method="GET" action="/user/ratings">
                <button type="submit" class="rating-btn">Rating</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <a href="/user/dashboard" class="btn btn-secondary mt-4">Back to Dashboard</a>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
